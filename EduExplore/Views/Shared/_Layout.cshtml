<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] EduExplore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EduExplore.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 gradient-custom">
            <div class="container-fluid">
                <a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">EduExplore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Начало</a>
                        </li>
                        <li id="showByFilter" class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-light dropdown-toggle" role="button" id="dropdownMenuOne" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="School" asp-action="allschools">Училища</a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("AllSchools", "School")">Всички училища</a>
                                    <a class="dropdown-item" href="@Url.Action("AllInhabitedAreasSchool", "Institution")">Според населеното място</a>
                                    <a class="dropdown-item" href="@Url.Action("AllRegionsSchool", "Institution")">Според региона</a>
                                    <a class="dropdown-item" href="@Url.Action("AllInstitutionTypesSchool", "Institution")">Според вида</a>
                                    <a class="dropdown-item" href="@Url.Action("AllDetailedInstitutionTypesSchool", "Institution")">Според детайлния вид</a>
                                    <a class="dropdown-item" href="@Url.Action("AllFinancialTypesSchool", "Institution")">Според финансирането</a>
                                </div>
                            </div>
                        </li>
                        <li id="showByFilter" class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-light dropdown-toggle" role="button" id="dropdownMenuOne" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Kindergarten" asp-action="allkindergartens">Детски градини</a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                    <a class="dropdown-item" href="@Url.Action("AllKindergartens", "Kindergarten")">Всички детски градини</a>
                                    <a class="dropdown-item" href="@Url.Action("AllInhabitedAreasKindergarten", "Institution")">Според населеното място</a>
                                    <a class="dropdown-item" href="@Url.Action("AllRegionsKindergartens", "Institution")">Според региона</a>
                                    <a class="dropdown-item" href="@Url.Action("AllFinancialTypesKindergarten", "Institution")">Според финансирането</a>
                                </div>
                            </div>
                        </li>
                        <li id="dataVisNavMenu" class="nav-item">
                            <div class="dropdown show">
                                <a class="nav-link text-light dropdown-toggle" role="button" id="dropdownMenuOne" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-area="" asp-controller="Statistics" asp-action="allstatistics">Визуализация на данни</a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                     <a class="dropdown-item" href="@Url.Action("AllStatistics", "Statistics")">Общо</a>
                                    <a class="dropdown-item" href="@Url.Action("SchoolStatistics", "Statistics")">За училища</a>
                                    <a class="dropdown-item" href="@Url.Action("KindergartenStatistics", "Statistics")">За детски градини</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="container-fluid">
            @RenderBody()
        </main>
    </div>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EduExplore - <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
